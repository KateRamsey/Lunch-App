@model Lunch_App.Models.LunchPickVM

@{
    ViewBag.Title = "PickLunch";
}

<h2>PickLunch</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>LunchPickVM</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Picks, htmlAttributes: new { @class = "control-label col-md-2" })
            @foreach (var p in Model.Picks)
            {
                <div class="col-md-10">
                    @Html.RadioButtonFor(m => p.Selected, false) @p.Name
                </div>
            }
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
