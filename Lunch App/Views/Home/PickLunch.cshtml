@model Lunch_App.Models.LunchPickVM

@{
    ViewBag.Title = "PickLunch";
}

<h2>PickLunch</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Where is your group going for lunch on @Model.MeetingDateTime.ToShortDateString()?</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(m=>m.MeetingDateTime)

        <div class="form-group">
            @Html.LabelFor(model => model.Picks, htmlAttributes: new {@class = "control-label col-md-2"})
            <br/>
            @foreach (var p in Model.Picks)
            {
                <div class="col-md-10 col-md-offset-2">
                    <label>@Html.RadioButtonFor(model => model.SelectedId, p.Id) @p.Name</label> 
                </div>
            }
        </div>


