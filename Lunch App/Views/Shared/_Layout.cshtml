<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title LunchConnect</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle hidden-xs" data-toggle="collapse" data-target=".navbar-collapse">
            </button>
            @Html.ActionLink("LunchConnect | by Kate", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
            <span class="icon-bar btn btn-default hidden-xs hidden-sm indexButtons">@Html.ActionLink("Add a Restaurant", "CreateRestaurant", "Home")</span>
            <span class="icon-bar btn btn-info hidden-xs indexButtons">@Html.ActionLink("Start Planning Lunch", "CreateLunch", "Home")</span>
        </div>
        @Html.ActionLink("Start Planning Lunch", "CreateLunch", "Home", new { area = "" }, new { @class = "hidden-sm hidden-md hidden-lg SmallLink" })
        <div class="navbar-collapse collapse">
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>

<div class="container body-content">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-dismissible alert-info col-md-8 col-md-offset-2 tempDataMessage">
            <button class="close" type="button" data-dismiss="alert">&times;</button>
            <span class=""> @TempData["Message"] </span>
        </div>
        <br />
    }
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year | LunchConnect | by Kate Ramsey</p>
    </footer>
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datetime")
    @RenderSection("scripts", required: false)
    </body>
</html>
